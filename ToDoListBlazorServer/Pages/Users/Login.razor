@page "/"
@using ToDoListBlazorServer.Services.Auth
@layout LoginLayout


@inject AuthService _authService
@inject NavigationManager _navigationManager

<h1>Login</h1>

<EditForm Model="_model" OnValidSubmit="@HandleLogin">

    <DataAnnotationsValidator/>
    <ValidationSummary/>

    <div class="mb-3">
        <label for="Email" class="form-label">Email</label>
        <InputText id="Email" class="form-control" @bind-Value=_model.Email/>
    </div>

    <div class="mb-3">
        <label for="Password" class="form-label">Senha</label>
        <InputText id="Password" class="form-control" @bind-Value=_model.Password/>
    </div>

    @if (!string.IsNullOrEmpty(_errorMessage))
    {
        <div class="alert-danger" role="alert">
            @_errorMessage
        </div>
    }

    <button type="submit" class="btn btn-success">
        Entrar
    </button>

</EditForm>




@code {
    private LoginDto _model = new();
    private string? _errorMessage = null;

    private async Task HandleLogin()
    {

        var sucess = await _authService.LoginAsync(_model.Email, _model.Password);

        if (sucess is true)
        {
            _navigationManager.NavigateTo("/tasks");
        }
        else
        {
            _errorMessage = "Usuário ou senha inválidos";
        }

        
       
    }


}
